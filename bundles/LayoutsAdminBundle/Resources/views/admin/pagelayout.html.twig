{% trans_default_domain 'nglayouts_admin' %}

<!DOCTYPE html>
<html lang="{{ app.request.locale|replace({'_': '-'}) }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta name="theme-color" content="#02a6f2">

    {% include '@NetgenLayoutsAdmin/admin/head.html.twig' %}

    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('favicon/apple-touch-icon.png', 'nglayouts_admin_images') }}">
    <link rel="icon" type="image/png" href="{{ asset('favicon/favicon-32x32.png', 'nglayouts_admin_images') }}" sizes="32x32">
    <link rel="icon" type="image/png" href="{{ asset('favicon/favicon-16x16.png', 'nglayouts_admin_images') }}" sizes="16x16">
    <link rel="manifest" href="{{ asset('favicon/manifest.json', 'nglayouts_admin_images') }}">
    <link rel="mask-icon" href="{{ asset('favicon/safari-pinned-tab.svg', 'nglayouts_admin_images') }}" color="#5bbad5">
    <link rel="shortcut icon" href="{{ asset('favicon/favicon.ico', 'nglayouts_admin_images') }}">
    <meta name="msapplication-config" content="{{ asset('favicon/browserconfig.xml', 'nglayouts_admin_images') }}">
    <meta name="theme-color" content="#ffffff">

    <title>
        {% block title %}
            {{ 'pagelayout.title'|trans }}
        {% endblock %}
    </title>

    {% block stylesheets %}
        {% include '@NetgenLayoutsAdmin/admin/stylesheets.html.twig' %}
    {% endblock %}

    {% block javascripts %}
        {% include '@NetgenLayoutsAdmin/admin/javascripts.html.twig' %}
    {% endblock %}
</head>
<body>
    <div class="ng-layouts-app">
        <div class="ng-layouts-container">
            <div class="layouts-sidebar">
                <div class="main-menu">
                    {% include '@NetgenLayoutsAdmin/admin/main_menu.html.twig' %}
                </div>
            </div>

            <div class="layouts-content">
                {% block content %}{% endblock %}
            </div>
        </div>
    </div>
</body>
</html>

includes:
    - vendor/phpstan/phpstan-strict-rules/rules.neon
    - vendor/phpstan/phpstan-phpunit/extension.neon
    - vendor/phpstan/phpstan-phpunit/rules.neon

parameters:
    excludes_analyse:
        - tests/application/public/bundles/
        - tests/application/config/bootstrap.php

    ignoreErrors:
        # Doctrine DBAL
        -
            message: '#Cannot call method fetchAll\(\) on Doctrine\\DBAL\\Driver\\Statement\|int#'
            path: tests/lib/Persistence/Doctrine/Helper/PositionHelperTest.php

        # Compatibility with Symfony 3.4

        - '#Symfony\\Component\\ErrorHandler\\Exception\\FlattenException#'

        # Compatibility with Symfony 4.4

        - '#Call to function method_exists\(\) with Symfony\\Component\\HttpKernel\\Event\\GetResponseForExceptionEvent#'

        # Netgen Layouts specifics

        - '#should be contravariant with parameter \$(value|object)#'

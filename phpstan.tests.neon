includes:
    - vendor/phpstan/phpstan-strict-rules/rules.neon
    - vendor/phpstan/phpstan-phpunit/extension.neon
    - vendor/phpstan/phpstan-phpunit/rules.neon

parameters:
    excludes_analyse:
        - tests/application/web/bundles/
        - tests/bootstrap.php

    ignoreErrors:
        # Doctrine DBAL
        - '#Cannot call method fetchAll\(\) on Doctrine\\DBAL\\Driver\\Statement\|int#'

        -
            message: '#Call to function method_exists#'
            path: tests/lib/TestCase/LegacyTestCaseTrait.php
        -
            message: '#Parameter \#\d+ \$object of method Netgen\\BlockManager\\Utils\\Hydrator::\w+\(\) expects object, string given\.#'
            path: tests/lib/Utils/HydratorTest.php
        -
            message: '#should be contravariant with parameter \$object#'
            path: tests/lib/Item/Stubs/UnsupportedValueConverter.php

        -
            message: '#should be contravariant with parameter \$object#'
            path: tests/lib/Item/Stubs/ValueConverter.php

        - '#Access to an undefined property object::\$id.#'
        - '#Call to function is_object\(\) with object will always evaluate to true.#'
